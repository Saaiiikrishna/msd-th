# Production Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://api.treasurehunt.mysillydreams.com
NEXT_PUBLIC_BASE_URL=https://treasurehunt.mysillydreams.com

# Authentication
NEXTAUTH_URL=https://treasurehunt.mysillydreams.com
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
NEXT_PUBLIC_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}

# Payment Gateway
NEXT_PUBLIC_RAZORPAY_KEY_ID=${RAZORPAY_KEY_ID}
RAZORPAY_KEY_SECRET=${RAZORPAY_KEY_SECRET}

# Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}
NEXT_PUBLIC_FB_PIXEL_ID=${FB_PIXEL_ID}
NEXT_PUBLIC_CLARITY_PROJECT_ID=${CLARITY_PROJECT_ID}

# Feature Flags
NEXT_PUBLIC_ENABLE_AB_TESTING=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Database
DATABASE_URL=${DATABASE_URL}

# Redis
REDIS_URL=${REDIS_URL}

# Email Service
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
FROM_EMAIL=noreply@treasurehunt.mysillydreams.com

# File Storage
NEXT_PUBLIC_STORAGE_URL=https://storage.treasurehunt.mysillydreams.com
S3_BUCKET_NAME=${S3_BUCKET_NAME}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN}

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
CORS_ORIGIN=https://treasurehunt.mysillydreams.com
CSRF_SECRET=${CSRF_SECRET}

# WebSocket
NEXT_PUBLIC_WS_URL=wss://api.treasurehunt.mysillydreams.com/ws

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}
VAPID_PRIVATE_KEY=${VAPID_PRIVATE_KEY}
VAPID_SUBJECT=mailto:admin@treasurehunt.mysillydreams.com

# Third-party Services
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Production Settings
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_DEBUG_MODE=false

# Performance
NEXT_PUBLIC_CDN_URL=https://cdn.treasurehunt.mysillydreams.com
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# SEO
NEXT_PUBLIC_SITE_NAME=Treasure Hunt - MySillyDreams
NEXT_PUBLIC_SITE_DESCRIPTION=Embark on exciting treasure hunts and adventure experiences across India
NEXT_PUBLIC_SITE_KEYWORDS=treasure hunt,adventure,team building,India,booking,experiences

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/mysillydreams
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/mysillydreams
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/mysillydreams
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/mysillydreams
